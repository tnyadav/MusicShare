<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/menuitemspeakersnew" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding_small"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/mediume_text_font_size" />

        <Button
            android:id="@+id/btnSendRequest"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Send friend request"
            android:background="@drawable/buttonselector_myaccount"
            android:layout_gravity="right"
            android:padding="@dimen/layout_padding_small"
            android:layout_marginRight="@dimen/layout_padding_small"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_font_size" />

    </LinearLayout>

</LinearLayout>